<div class="past-picks active">
  <header class="sub-header">
    <h2 class="question">Past Picks</h2>
    <%= league_select(League.with_recently_past_games, @league) { |l| l == :all ? fb_app_url : fb_app_url("/games/completed/#{l.id}") } %>
  </header>

  <ul class="games">
    <%= render partial: 'fb/games/game', collection: @games %>
  </ul>
</div>
