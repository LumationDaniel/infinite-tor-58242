<div id="challenge-modal" class="modal hide">
  <div class="modal-header">
    <a href="#" class="close">Ã—</a>
    <h3>Challenge a friend to increase your winnings!</h3>
  </div>

  <div class="modal-body">
    <div class="select-friend step"></div>

    <div class="wager step">
      <p>Challenging: <span class="opponent"></span></p>
      <form>
        <fieldset>
          <label for="challenge_wager_amount">Enter the amount to wager:</label>
          <div class="input">
            <input id="challenge_wager_amount" type="number" value="200">
            <span class="help-block max-hint"></span>
          </div>
        </fieldset>
      </form>
    </div>

    <div class="apprequest step">
      <p>Sending the following challenge request to <span class="opponent"></span>:</p>
      <blockquote class="message"></blockquote>
      <form>
        <fieldset>
          <label for="challenge_message">Include a note to your friend:</label>
          <div class="input challenge-message-container"></div>
        </fieldset>
      </form>
    </div>
  </div>

  <div class="modal-footer">
    <a href="#" class="btn primary">Next</a>
    <a href="#" class="btn secondary">Back</a>
  </div>
</div>

<%= render 'challenges/confirmation' %>
